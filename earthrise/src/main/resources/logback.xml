<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} %highlight(%-5level) %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ROLLING_TIME_BASED_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/earthrise/earthrise.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/earthrise/earthrise.%d{yyyyMMdd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%date{ISO8601} %highlight(%-5level) %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ROLLING_TIME_BASED_FILE"/>
    </root>

    <logger name="com.pro.jenova.omnidrive.rest.filter.RequestAndResponseFilter" level="DEBUG"/>

</configuration>