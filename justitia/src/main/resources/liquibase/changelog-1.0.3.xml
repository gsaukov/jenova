<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create_login_request" author="d.konstantopoulos">
        <createTable tableName="LOGIN_REQUEST">
            <column name="ID" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="VERSION" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_UPDATED" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_BY" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="USERNAME" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="REFERENCE" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="EXPIRES_AT" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="LOGIN_REQUEST" columnNames="REFERENCE"
                             constraintName="UDX_LRQ_REFERENCE"/>
        <createIndex tableName="LOGIN_REQUEST" indexName="IDX_LRQ_USERNAME" unique="false">
            <column name="USERNAME" type="varchar(64)"/>
        </createIndex>
    </changeSet>

    <changeSet id="create_login_request_attrs" author="d.konstantopoulos">
        <createTable tableName="LOGIN_REQUEST_ATTRS">
            <column name="LOGIN_REQUEST_ID" type="varchar(64)">
                <constraints nullable="false" foreignKeyName="FK_LRA_LOGIN_REQUEST_ID" references="LOGIN_REQUEST(ID)"/>
            </column>
            <column name="NAME" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="LOGIN_REQUEST_ATTRS" indexName="IDX_LRA_LOGIN_REQUEST_ID" unique="false">
            <column name="LOGIN_REQUEST_ID" type="varchar(64)"/>
        </createIndex>
        <addUniqueConstraint tableName="LOGIN_REQUEST_ATTRS" columnNames="LOGIN_REQUEST_ID,NAME"
                             constraintName="UDX_LRA_LOGIN_REQUEST_ID_NAME"/>
    </changeSet>

    <changeSet id="create_login_verification" author="d.konstantopoulos">
        <createTable tableName="LOGIN_VERIFICATION">
            <column name="ID" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="VERSION" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_UPDATED" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_BY" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="LOGIN_REQUEST_ID" type="varchar(64)">
                <constraints nullable="false" foreignKeyName="FK_LVF_LOGIN_REQUEST_ID" references="LOGIN_REQUEST(ID)"/>
            </column>
            <column name="METHOD" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="LOGIN_VERIFICATION" indexName="IDX_LVF_LOGIN_REQUEST_ID" unique="false">
            <column name="LOGIN_REQUEST_ID" type="varchar(64)"/>
        </createIndex>
        <addUniqueConstraint tableName="LOGIN_VERIFICATION" columnNames="LOGIN_REQUEST_ID,METHOD"
                             constraintName="UDX_LVF_LOGIN_REQUEST_ID_METHOD"/>
    </changeSet>

</databaseChangeLog>
