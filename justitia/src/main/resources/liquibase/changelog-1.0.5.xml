<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create_scope" author="d.konstantopoulos">
        <createTable tableName="SCOPE">
            <column name="ID" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="VERSION" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="datetime(3)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_UPDATED" type="datetime(3)">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_BY" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="CLIENT_ID" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="MAX_USAGES" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="PERMISSIONS" type="varchar(512)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="SCOPE" columnNames="CLIENT_ID,NAME"
                             constraintName="UDX_SCOPE_CLI_NAME"/>
    </changeSet>

</databaseChangeLog>
