<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%mdc{logCorrelationId:-undefined}] [%-5level] [%thread] %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.pro.jenova.omnidrive.rest.filter.RequestAndResponseFilter" level="DEBUG"/>

</configuration>